// prisma/schema.prisma

// Define your datasource
datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL") // Use environment variable for better security
}

// Define the User table
model User {
  id       Int      @id @default(autoincrement())
  email    String   @unique
  password String
  jwt      String
  urls     Url[]    @relation("UserUrls")
}

// Define the Url table
model Url {
  id        Int     @id @default(autoincrement())
  key       String
  long_url  String
  short_url String
  isActive  Boolean
  userId    Int
  user      User    @relation("UserUrls", fields: [userId], references: [id])
}

// Define the Prisma Client generator
generator client {
  provider = "prisma-client-js"
}
